<div class="col-md-3">
  <h2>User info</h2>
  <%= attachment_image_tag user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "attachment user profile_image", fallback: "no_image.jpg" %>
  <table class="table">
    <tbody>
      <tr></tr>
      <tr>
        <th>name</th>
        <th><%= user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= user.introduction %></th>
      </tr>
    </tbody>
  </table>

<div class='row'>
  <%= link_to "", edit_user_path(user), class: "btn btn-outline-secondary btn-block fas fa-user-cog" %>
</div>

  <h2 class="mt-3">New book</h2>
  <%= form_with model: book_new, local:true do |f| %>
    <div class="field">
      <label for="book_title">Title</label><br>
      <%= f.text_field :title, class:'col-xs-12 book_title' %>
    </div>
    <div class="field">
      <label for="book_opinion">Opinion</label><br>
      <%= f.text_area :body, class:'col-xs-12 book_body' %>
    </div>
    <div class="actions row">
      <%= f.submit 'Create Book', class:'btn btn-success col-xs-12' %>
    </div>
  <% end %>
</div>